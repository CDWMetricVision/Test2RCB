/* General Page Styling */
body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background: linear-gradient(135deg, #ff4b4b, #ffffff);
    color: #fff;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.main-container {
    text-align: center;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
}

header h1 {
    font-size: 3rem;
    font-weight: bold;
    color: #ff4b4b;
    margin-bottom: 10px;
    text-shadow: 2px 2px #fff;
}

header p {
    font-size: 1.2rem;
    color: #fff;
}

/* Button Styling */
.button-container {
    margin-top: 20px;
}

.btn-3d {
    background: linear-gradient(to bottom, #ff4b4b, #e63232);
    border: none;
    padding: 15px 30px;
    margin: 10px;
    font-size: 1.2rem;
    font-weight: bold;
    color: white;
    text-transform: uppercase;
    border-radius: 10px;
    box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
}

.btn-3d:hover {
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.5);
    transform: translateY(-3px);
    cursor: pointer;
}

.btn-3d:active {
    transform: translateY(2px);
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}

/* Responsive Design */
@media (max-width: 768px) {
    header h1 {
        font-size: 2.5rem;
    }

    .btn-3d {
        font-size: 1rem;
        padding: 10px 20px;
    }
}
